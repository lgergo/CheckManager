<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.yevsp8.checkmanager.view.HelpFragment">

    <TextView
        android:id="@+id/help_title"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_fragment_title" />
    
    <TextView
        android:id="@+id/help_textBeforeListitems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_title"
        android:text="@string/help_fragment_textBeforelistitems" />

    <TextView
        android:id="@+id/help_listitem_0"
        style="@style/CustomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_textBeforeListitems"
        android:text="@string/help_fragment_listitem_0" />

    <TextView
        android:id="@+id/help_listitem_1"
        style="@style/CustomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_listitem_0"
        android:text="@string/help_fragment_listitem_1" />

    <TextView
        android:id="@+id/help_listitem_2"
        style="@style/CustomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_listitem_1"
        android:text="@string/help_fragment_listitem_2" />
    
    <TextView
        android:id="@+id/help_listitem_3"
        style="@style/CustomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_listitem_2"
        android:text="@string/help_fragment_listitem_3" />
    
    <TextView
        android:id="@+id/help_programUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_listitem_3"
        android:text="@string/help_fragment_programUsage" />

</RelativeLayout>
