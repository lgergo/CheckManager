<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yevsp8.checkmanager.RecognisedCheckActivity">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recognised_check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Csekk adatai" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recognised_check_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognised_check_title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recognised_check_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognised_check_id" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recognised_check_paidTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognised_check_amount" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/recognised_check_paidDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognised_check_paidTo" />

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Upload" />

</RelativeLayout>
