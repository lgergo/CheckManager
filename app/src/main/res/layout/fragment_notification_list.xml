<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yevsp8.checkmanager.NotificationListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/active_notifications_title" />

        <ListView
            android:id="@+id/listview_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/listview_notification_emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã‰ljen, minden csekk befizetve!"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_notification_floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_24dp"
        android:tint="#fff"
        app:backgroundTint="@color/colorPrimary" />

</FrameLayout>
