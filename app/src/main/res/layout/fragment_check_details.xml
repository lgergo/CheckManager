<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_details_title"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Csekk adatai" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_details_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_details_title"
        android:text="Azonosító:" />

    <EditText
        android:id="@+id/check_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/check_details_title"
        android:enabled="false"
        android:inputType="number" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_details_create_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_details_id"
        android:text="Létrehozva:" />

    <EditText
        android:id="@+id/check_details_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/check_details_id"
        android:enabled="false" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_details_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_details_create"
        android:text="Összeg:" />

    <EditText
        android:id="@+id/check_details_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/check_details_create"
        android:enabled="false"
        android:inputType="number" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_details_paidto_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_details_amount"
        android:text="Cég neve:" />

    <EditText
        android:id="@+id/check_details_paidto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/check_details_amount"
        android:enabled="false" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_details_paiddate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_details_paidto"
        android:text="Fizetve:" />

    <EditText
        android:id="@+id/check_details_paiddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/check_details_paidto"
        android:enabled="false" />

    <Button
        android:id="@+id/button_details_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Upload" />

    <Button
        android:id="@+id/button_details_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Edit" />


</RelativeLayout>