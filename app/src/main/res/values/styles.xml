<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextTitle" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="ToolbarActivityStyle" parent="AppTheme">
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomList" parent="AppTheme">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Theme.DoNotDim" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
